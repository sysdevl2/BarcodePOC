<?xml version="1.0" encoding="utf-8"?>
    <GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:useDefaultMargins="true"
        android:layout_gravity="left"
        android:alignmentMode="alignBounds"
        android:columnOrderPreserved="false"
        android:columnCount="14"
        android:rowCount="4"
        android:padding="1dp">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:layout_gravity="left"
            android:layout_marginRight="3dip"
            android:layout_rowSpan="4"
            android:contentDescription="TODO"
            android:src="@drawable/cast_album_art_placeholder"
            app:srcCompat="@drawable/common_google_signin_btn_icon_dark_focused" />

    <TextView
        android:id="@+id/shortDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="4"
        android:layout_columnSpan="8"
        android:layout_row="1"
        android:layout_rowSpan="2"
        android:ellipsize="marquee"
        android:gravity="left"
        android:maxLines="2"
        android:text="Our brand new Freshly Picked range is \ngoing to change your definition of flavour!"
        android:textColor="@color/black"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/numberOfItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="11"
        android:layout_columnSpan="2"
        android:layout_row="1"
        android:layout_rowSpan="1"
        android:gravity="left"
        android:text="x 1"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/totalRowPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="11"
        android:layout_columnSpan="3"
        android:layout_row="2"
        android:layout_rowSpan="1"
        android:gravity="left"
        android:text="£0,000.00"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/extraInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="13"
        android:layout_columnSpan="1"
        android:layout_row="1"
        android:layout_rowSpan="1"
        android:gravity="left|center_vertical"
        android:text="On offer"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:background="@color/british_green"
        android:textSize="8sp" />
    <TextView
        android:id="@+id/itemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="4"
        android:layout_columnSpan="8"
        android:layout_row="0"
        android:layout_rowSpan="1"
        android:gravity="left"
        android:text="Example 111111111111"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/unitPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="11"
        android:layout_columnSpan="3"
        android:layout_row="0"
        android:layout_rowSpan="1"
        android:gravity="left"
        android:text="£0,000.00"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="12sp" />
</GridLayout>