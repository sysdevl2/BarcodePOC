<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:useDefaultMargins="true"
    android:layout_gravity="left"
    android:alignmentMode="alignBounds"
    android:columnOrderPreserved="false"
    android:columnCount="3"
    android:rowCount="3"
    android:padding="1dp">


    <TextView
        android:id="@+id/rowTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_columnSpan="1"
        android:layout_row="2"
        android:layout_rowSpan="1"
        android:text="£0.00"
        android:textAlignment="textEnd"
        android:textSize="12sp" />

    <ImageButton
        android:id="@+id/rowContextMenu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_column="2"
        android:layout_columnSpan="1"
        android:layout_row="0"
        android:layout_rowSpan="2"
        android:scaleType="centerCrop"
        app:srcCompat="@android:drawable/ic_menu_more" />

    <TextView
        android:id="@+id/itemExtra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:layout_row="1"
        android:layout_rowSpan="1"
        android:maxLines="1"
        android:maxWidth="230dp"
        android:text="£5.00 per litre"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/itemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:layout_row="0"
        android:layout_rowSpan="1"
        android:maxLines="2"
        android:maxWidth="230dp"
        android:text="Liquid nitrogen for drinking like water"
        android:textColor="@color/british_green"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/itemIcon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_row="0"
        android:layout_rowSpan="3"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/dummyitemicon" />

    <include
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:layout_row="2"
        android:layout_rowSpan="1"
        layout="@layout/number_spinner"
       />

</GridLayout>
